<!DOCTYPE html>
<html>
    <head>
    <title>Login</title>
    <!-- Bootstrap 5 CSS CDN link -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  </head>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">My File Manager</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/home/getAllFiles">All Files</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/home/upload">Upload File</a>
        </li>
      </ul>
      <ul class="navbar-nav ms-auto">
        <% if (!user) { %>
          <li class="nav-item">
            <a class="nav-link" href="/auth/login">Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/auth/signup">Sign up</a>
          </li>
        <% } else { %>
        
          <li class="nav-item">
            <a class="nav-link" href="/auth/logout">Logout</a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-sm-6 offset-sm-3 mt-5">
          <h1>Login</h1>
          <% if (errorMsg) { %>
            <div class="alert alert-danger mt-3" role="alert"><%= errorMsg %></div>
          <% } %>
          <form action="/auth/loginuser" method="post">
            <div class="mb-3">
              <label for="username" class="form-label">Username:</label>
              <input type="text" class="form-control" id="username" name="username" required>
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password:</label>
              <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
